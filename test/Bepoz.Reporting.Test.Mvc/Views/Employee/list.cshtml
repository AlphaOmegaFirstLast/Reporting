@model IEnumerable<Bussiness.Models.Employee>
@{
    ViewBag.Title = "Home Page";
}

<table class="table table-striped table-hover">
    <tr>
        <th>Name</th>
        <th>Department</th>
        <th>Operations</th>
    </tr>
    @foreach (var e in @Model)
    {
        <tr>
            <td>@e.Name</td>
            <td>@e.Department.Name</td>
            <td><a asp-controller="Employee" asp-action="Delete" asp-route-id="@e.Id">Delete</a></td>
            <td><a asp-controller="Employee" asp-action="Edit" asp-route-id="@e.Id">Edit</a></td>
       </tr>
    }
</table>
