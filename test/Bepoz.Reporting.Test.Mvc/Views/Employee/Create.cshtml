@model Bussiness.Models.Employee
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
// ViewBag.Title = "Home Page";
}


<form asp-controller="Employee" asp-action="Create" method="POST" class="input-sm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group input-group-sm">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="@ViewBag.Departments" class="form-control"></select>
        <span asp-validation-for="Password" class="text text-danger"></span>
    </div>
        <div class="form-group input-group-sm">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>
    
    <div class="form-group input-group-sm">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text text-danger"></span>
    </div>
    <div class="form-group input-group-xs">
        <label asp-for="Address" class="text-"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" placeholder="333-333-4444" />
        <span asp-validation-for="Phone" class="text text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <label asp-for="WebSite"></label>
        <input asp-for="WebSite" class="form-control" />
        <span asp-validation-for="WebSite" class="text text-danger"></span>
    </div>
    <div class="row form-inline">
        <div class="col-xs-2 form-group input-group-sm">
            <label asp-for="Salary"></label>
        </div>
        <div class="col-xs-3 form-group input-group-sm">
            <div class="input-group-addon ">$</div>
            <input asp-for="Salary" class="form-control"/>
        </div>
        <span asp-validation-for="Salary" class="text text-danger"></span>
    </div>
    <div class="form-group input-group-sm">
        <div class="row">
            <div class="col-sm-2">
                <label asp-for="Level"></label>                
            </div>
            <div class="col-sm-3">
                <input asp-for="Level" class="form-control" type="range" />
                
            </div>
        </div>
         <span asp-validation-for="Level" class="text text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-3 form-group input-group-sm">

            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" class="form-control" />
            <span asp-validation-for="BirthDate" class="text text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-2 form-group input-group-sm">

            <label asp-for="GraduationDate"></label>
            <input asp-for="GraduationDate" class="form-control" />
            <span asp-validation-for="GraduationDate" class="text text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3 form-group  input-group-xs">
            <label asp-for="Experience"></label>
            <textarea asp-for="Experience" class="form-control"></textarea>
            <span asp-validation-for="Experience" class="text text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-offset-3">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>



@section Scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="//cdn.jsdelivr.net/webshim/1.14.5/polyfiller.js"></script>
    <script>
        webshims.setOptions('forms-ext', { types: 'date' });
        webshims.polyfill('forms forms-ext');
        $.webshims.formcfg = {
            en: {
                dFormat: '-',
                dateSigns: '-',
                patterns: {
                    d: "dd-mm-yy"
                }
            }
        };
    </script>
}